 #include<stdio.h>
 main()
 {
     int a,b,c;
     printf("Enter two numbers:\n");
     scanf("%d %d",&a,&b);
     c=add(a,b);
     printf("Sum = %d\n",c);
     add2nos(a,b,&c);
     printf("Sum = %d",c);
 }
 int add(int x,int y){
     int res=x+y;
     return res;
 }
 void add2nos(int n1,int n2,int *z){
     *z=n1+n2;
 }
